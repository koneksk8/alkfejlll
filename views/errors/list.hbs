{{#extend "scripts"}}
<script src="/js/list.js"></script>
{{/extend}}

{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Bejegyzett áruk</h1>
     <!--h1>Bejelentett hibáim</h1-->
</div>

<table class="table table-striped table-hover" id="errorTable">
    <thead>
        <tr>
            <th>Időpont</th>
            <th>Státusz</th>
            <th>Szektor</th>
            <th>Leírás</th>
        </tr>   
    </thead>
    <tbody>
        {{#each errors}}
        <tr>
            <td>{{date}}</td>
            <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
            <td>{{location}}</td>
            <td><span class="badge">{{numberOfMessages}}</span> {{description}}</td>
            <td>[<a href="/errors/edit/{{id}}">EDIT</a>]</td>
            <td>[<a href="/errors/delete/{{id}}">DEL</a>]</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<p><a href="/errors/new" class="btn btn-default">Új áru felvétele</a></p>
