<div class="page-header">
    <h1>Egyed szerkesztése</h1>
</div>

<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group
            {{#if validationErrors.nev}}
                has-error
            {{/if}}
        ">
            <label for="nev" class="col-lg-2 control-label">Szektor</label>
            <div class="col-lg-10">
                <input class="form-control" id="location" name="location" placeholder="helyszín" type="text" value="{{data.location}}">
                {{#if validationErrors.location}}
                    <span class="help-block">{{validationErrors.location.msg}}</span>
                {{/if}}
            </div>
        </div>
        <div class="form-group
            {{#if validationErrors.description}}
                has-error
            {{/if}}
        ">
            <label for="description" class="col-lg-2 control-label">Leírás</label>
            <div class="col-lg-10">
                <textarea class="form-control" rows="3" id="description" name="description" placeholder="leírás">{{data.description}}</textarea>
                <!--<span class="help-block">Meg kell adni a helyszínt, ha pedig konkrét géppel van probléma, akkor azt is.</span>-->
                {{#if validationErrors.description}}
                    <span class="help-block">{{validationErrors.description.msg}}</span>
                {{/if}}
            </div>
            <!--<label for="statusz" class="col-lg-2 control-label">Státusz</label>
            div class="col-lg-10 row-fluid" style="padding-top:15px;">
                <input type="radio" name="status" value="elfogadott" checked> Elfogadott
                <input type="radio" name="status" value="uj"> Új
            </div-->
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Töröl</button>
                <button type="submit" class="btn btn-primary">Szerkeszt</button>
            </div>
        </div>
    </fieldset>
</form>